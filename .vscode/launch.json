{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Fluent-bit Plugin",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "apiVersion": 2,
            "trace": "verbose",
            "debugAdapter": "dlv-dap",
            "substitutePath": [
                { "from": "${workspaceFolder}/fluent-bit-emf", "to": "/fluent-bit-emf" },
            ]
        }
    ]
}
